<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Postal & Logística Lomas</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppPYLL.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="d-flex" id="wrapper">
        <div class="sidebar bg-dark-custom text-white p-3 vh-100 d-flex flex-column">
            <a asp-controller="Home" class="d-flex text-decoration-none">
                <img src="@Url.Content("~/img/sin_fondo.png")" class="logo" />
                <span class="text-white ms-3">Postal & Logística Lomas</span>
            </a>
            
            <hr>

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="#" class="nav-link active d-flex align-items-center" aria-current="page">Principal</a>
                </li>
                <li>
                    <a href="#" class="nav-link text-white-50 d-flex align-items-center">Movimientos</a>
                </li>
                <li>
                    <a href="#" class="nav-link text-white-50 d-flex align-items-center">Clientes</a>
                </li>
            </ul>

            <div class="dropdown mt-auto">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="user-dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="rounded-circle bg-secondary d-flex justify-content-center align-items-center me-2 nombre-usuario">
                        <span>WA</span>
                    </div>
                    <strong>Walter Acosta</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="user-dropdown">
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Sign out</a></li>
                </ul>
            </div>
        </div>

        <main class="w-100 p-5">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
